{
  "name": "repodigest",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc -b tsconfig.json",
    "typecheck": "tsc -b tsconfig.json --pretty false",
    "lint": "tsc -b tsconfig.json --pretty false",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage --coverage.reporter=text --coverage.reporter=json-summary",
    "kpi:onboarding": "node scripts/kpi/onboarding.mjs",
    "kpi:coverage": "npm run test:coverage && node scripts/kpi/critical-path-coverage.mjs",
    "kpi:github": "node scripts/kpi/github-metrics.mjs",
    "kpi:explainability": "node scripts/kpi/explainability-session.mjs",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "@vitest/coverage-v8": "^3.0.8",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8"
  }
}
